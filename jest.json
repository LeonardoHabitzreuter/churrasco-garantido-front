{
    "collectCoverageFrom": [
        "src/**/*.js",
        "!src/**/*.story.js",
        "!src/index.js",
        "!src/app.js",
        "!src/root.js",
        "!config/*.js"
    ],
    "coverageThreshold": {
        "global": {
          "functions": 100,
          "lines": 100
        }
    },
    "setupFiles": ["<rootDir>/config/setup-tests.js"],
    "roots": ["<rootDir>/tests"],
    "snapshotSerializers": ["<rootDir>/node_modules/enzyme-to-json/serializer"],
    "moduleNameMapper": {
        "^components(.*)$": "<rootDir>/src/components$1",
        "\\.(css|less|styl)$": "identity-obj-proxy"
    }
}